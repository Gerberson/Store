<div class="item">
    <div>Avatar URL</div>
    <input 
        type="url" 
        name="avatar_url"
        placeholder="http//"
        value="{{ member.avatar_url }}"
    >
</div>
<div class="item">
    <div>Nome</div>
    <input 
        type="text" 
        name="name"
        placeholder="Nome do membro"
        value="{{ member.name }}"
    >
</div>
<div class="item">
    <div>E-mail</div>
    <input 
        type="email" 
        name="email"
        placeholder="Digite seu e-mail"
        value="{{ member.email }}"
    >
</div>
<div class="item">
    <div>Data de Nascimento</div>
    <input 
        type="date" 
        name="birth"
        value="{{ member.birth }}"
    >
</div>
<div class="item">
    <div>Sexo</div>
    <span>
        <input 
            type="radio" 
            name="gender" 
            value="M"
            checked
        >
        Masculino
    </span>
    <span>
        <input 
            type="radio" 
            name="gender" v
            value="F"
            {% if member.gender == "F" %}
                checked
            {% endif %}
        >Feminino
    </span>
</div>
<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood">
            <option value="A+" 
            {% if member.blood =="A+" %}
                selected
            {% endif %}>A+</option>
            <option value="A-" 
            {% if member.blood =="A-" %}
                selected
            {% endif %}>A-</option>
            <option value="AB+" 
            {% if member.blood =="AB+" %}
                selected
            {% endif %}>AB+</option>
            <option value="AB-" 
            {% if member.blood =="AB-" %}
                selected
            {% endif %}>AB-</option>
            <option value="O+" 
            {% if member.blood =="O+" %}
                selected
            {% endif %}>O+</option>
            <option value="O-" 
            {% if member.blood =="O-" %}
                selected
            {% endif %}>O-</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Peso (kg)</div>
    <input 
        type="number" 
        name="weight"
        value="{{ member.weight }}"
    >
</div>
<div class="item">
    <div>Altura</div>
    <input 
        type="number" 
        name="height"
        value="{{ member.height }}"
    >
</div>
<div class="item">
    <div>Instrutor</div>
    <div>
        <select name="instructor">
            {% for instructor in instructors %}
                <option value="{{ instructor.id }}" {% if member.instructor_id == instructor.id %} selected {% endif %}>
                    {{ instructor.name }}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<button type="submit">Salvar</button>
