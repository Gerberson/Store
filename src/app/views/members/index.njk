{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/members/create">Novo</a>
            <form action="/members" method="GET">
                <input type="text" name="filter" placeholder="Nome ou Atendimento">
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Member</th>
                    <th id="email">E-mail</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}})"></span>
                            {{ member.name }}
                        </td>
                        <td id="email">{{ member.email }}</td>
                        <td> <img src="/peso.svg" alt=""> {{ member.weight }}</td>
                        <td id="altura"> <img src="/altura.svg" alt=""> {{ member.height }}</td>
                        <td><a href="/members/{{ member.id }}">Ver</a> </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
    </div>
{% endblock %}